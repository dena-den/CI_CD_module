pipeline {
   agent any


   stages {
      stage('Adding_path') {
        steps {
          set PATH=C:\1PROGRAMS\Python\;%PATH%
        }
      }
      stage('Creating_environment') {
        steps{      
          python -m venv .venv
          .venv\Scripts\activate
          pip install -r requirements.txt
        }
        }

   stage('Runing_tests') {
     steps {
        pytest -v > output.txt
     }
   }
   stage('Result') {
     steps {
       cat output.txt
     }
   }
  }
}